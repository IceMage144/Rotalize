<!-- Trip - Index                                                            -->
<!----------------------------------------------------------------------------->
<%= stylesheet_link_tag 'trips' %>

<p class="page-title">My Trips</p>

<div class="trips-container">
  <% @trips.each do |trip| %>
    <%= link_to(trip_path(trip)) do %>
      <div class="trip card">
        <p class="name"><span><%= trip.name %><span></p>
        <div class="info">
          <p><span>Beginning:</span> <%= trip.beginning %></p>
          <p><span>Durarion:</span> <%= trip.duration %> days</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="container-add-trip">
  <button type="button" class="btn"><i class="fa fa-5x fa-plus"></i></button>
</div>

