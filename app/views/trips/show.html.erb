<!--= Itinerary ============================================================-->

<p class="page-title">Itinerary</p>
<div class="itinerary-container">

  <% @days.each_with_index do |day, i| %>
    <div class="day card">
      <div class="day-header">
        <p><%= "#{i} - #{day.date + i}" %></p>
      </div>
      <% @places[i].size.times do |j| %>
        <div class="place">
          <div class="row">
            <div class="col">
              <%= image_tag('place.svg') %>
            </div>
            <div class="col">
              <p><span><% @places[i][j].name %></span></p>
              <p><% @places[i][j].openinghours %></p>

              <p>â‚¬ <% @places[i][j].price %></p>
            </div>
          </div>
        </div>
      <% end %>
      <div class="container-add-place">
        <button type="button" class="btn" data-toggle="modal" data-target="#modal"><i class="fa fa-5x fa-plus"></i></button>
      </div>
      <div>
      <%= link_to "Eae meu", controller: "days", action: "show", id: day%>
      </div>

    <% end %>

  </div>

  <%= form_for(@day, url: trip_path) do |f| %>
    <% if @day.errors.any? %>
      <ul>
        <% @day.errors.full_messages.each do |msg| %>
          <li><% puts "#{msg}" %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="container-add-day">
      <button id="submit" class="btn">
        <i class="fa fa-5x fa-plus"></i>
        <%= f.submit('', :hidden => true) %>
      </button>
    </div>
  <% end %>

</div>



