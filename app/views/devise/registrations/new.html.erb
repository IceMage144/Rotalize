<!--= Sign Up - New                                                         =-->
<!--=========================================================================-->
<section class="justify-content-center">
  <div class="card">
    <div class="header">
      <h3>SIGN UP</h3>
    </div>

    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if (devise_error_messages! != "") %>
          <div id="error-container">
            <%= devise_error_messages! %>
          </div>
        <% end %>

        <div id="name-container" class="md-form">
          <i class="fa fa-user prefix"></i>
          <%= f.text_field(:name, autofocus: true, autocomplete: "name", :class => 'form-control') %>
          <%= f.label(:name) %>
        </div>

        <div id="email-container" class="md-form signup">
          <i class="fa fa-envelope prefix"></i>
          <%= f.email_field(:email, autocomplete: "email", :class => 'form-control') %>
          <%= f.label(:email) %>
        </div>

        <div id="password-container" class="md-form">
          <i class="fa fa-lock prefix"></i>
          <%= f.password_field(:password, autocomplete: "off", :class => 'form-control') %>
          <%= f.label(:password) %>
        </div>

        <div id="password_confirmation-container" class="md-form">
          <i class="fa prefix"></i>
          <%= f.password_field(:password_confirmation, autocomplete: "off", :class => 'form-control') %>
          <%= f.label(:password_confirmation) %>
        </div>

        <button id="submit" class="btn btn-block">
          <%= f.submit("Sign Up") %>
        </button>

        <button id="other" class="btn btn-block">
            <%= link_to("Log in", new_session_path(resource_name)) %>
        </button>
      <% end %>
    </div>
  </div>
</section>

<!--=========================================================================-->
